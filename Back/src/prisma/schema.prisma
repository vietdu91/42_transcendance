generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int       @id @default(autoincrement())
  email             String    @unique
  name              String	@unique
  twoFactorSecret   String  @unique
  accessToken       String?  @unique
  twoFactorEnabled  Boolean @default(false)
  nickname		      String? 	@unique
  age 			        Int?
  character         String?
  games             Game[] @relation("players")
  actualGame        Int?
  pfp_url           String?
  wins              Int @default(0)
  looses            Int @default(0)
  messages          Message[] @relation("MessageAuthor")
}

model Game {
  id              Int     @id @default(autoincrement())
  players         User[] @relation("players")
  playersId       Int[]
  score           Int[]
  winnerId        Int?
  characters      String[]
  playing         Boolean
  date            DateTime @default(now())
}

model Message {
  id        Int     @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime  @updatedAt
  author    User?     @relation(name: "MessageAuthor", fields: [authorId], references: [id])
  authorId  Int?
}


model Channel {
  id        Int     @id @default(autoincrement())
  ownerId   String   
  name      String
  isPrivate Boolean @default(false)
  password  String?
  //messages  Message[] @relation("ChannelMessages")
  // Ajoutez d'autres champs de modèle si nécessaire
  // ...
}
